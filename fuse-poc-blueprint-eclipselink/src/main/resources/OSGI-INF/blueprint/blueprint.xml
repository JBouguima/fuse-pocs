<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="defaultPersonService" class="fuse.poc.blueprint.eclipselink.DefaultPersonService">
        <jpa:context property="em" unitname="personService"/>
        <tx:transaction method="*" value="Required"/>
    </bean>

    <service interface="fuse.poc.blueprint.eclipselink.PersonService" ref="defaultPersonService"/>

    <bean id="dataSource" class="org.hsqldb.jdbc.JDBCDataSource">
        <property name="url" value="jdbc:hsqldb:mem:testxxx"/>
        <property name="user" value="saxxx"/>
        <property name="password" value="xxx"/>
    </bean>

    <service id="MySQLDataSource" interface="javax.sql.DataSource" ref="dataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/DS"/>
        </service-properties>
    </service>

</blueprint>
